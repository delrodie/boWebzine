{% extends 'backend_layout.html.twig' %}

{% block title %}{{ post.titre }}{% endblock %}

{% block body %}
    <main class="main-content">
        <div class="page-title">
            <h4 class="mb-0"> Gestion des articles
                <small></small>
            </h4>
            <ol class="breadcrumb mb-0 pl-0 pt-1 pb-0">
                <li class="breadcrumb-item"><a href="{{ path('homepage') }}" class="default-color">Accueil</a></li>
                <li class="breadcrumb-item"><a href="{{ path('homepage') }}" class="default-color">{{ post.categorie.libelle }}</a></li>
                <li class="breadcrumb-item active">Article</li>
            </ol>
        </div>

        <div class="container-fluid">

            <div class="row">
                <div class="col-md-12">
                    {% for message in app.flashes('notice') %}
                        <div class="flash-notice">
                            <div class="alert alert-success alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-label="close">
                                    <span aria-hidden="true">&times;</span></button>
                                <div class="text-center">
                                    <h6>{{ message }}</h6>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="row mt-5 mb-3">
                <div class="col-md-12 ">
                    <h5 class=" ">{{ post.categorie.libelle }}</h5>
                    <p>{{ post.titre }}</p>
                </div>
            </div>

            <div class="card-deck">
                <div class="card mb-9">
                    <img src="{{ vich_uploader_asset(post, 'imageFile') }}" alt="{{ post.titre }}" title="{{ post.titre }}"  class="card-img-top img-fluid"/>
                    <div class="card-body">
                        <h5 class="card-title"></h5>
                        <p class="card-text">
                            {{ post.contenu|raw }}
                        </p>
                        <a href="{{ path('post_edit', {'slug': post.slug}) }}" class="btn btn-outline-danger"><i class="fa fa-edit"></i> Modifier</a>
                        <a href="#" class="btn btn-outline-primary"><i class="fa fa-eye"></i> Aper√ßu visiteur</a>
                        <a href="{{ path('post_index') }}" class="btn btn-outline-secondary"><i class="fa fa-list"></i> Liste des articles</a>
                        <div class="form-group row">
                            <div class="col-sm-3 col-sm-offset-8 ml-auto">
                                {{ include('post/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">
                            MOTS CLES :
                            {% for tag in post.tags|split(',') %}
                                <a href="#" class="btn-sm btn-outline-secondary">#{{ tag }}</a>
                            {% endfor %}

                        </small>
                    </div>
                </div>
            </div>

        </div>
    </main>
{% endblock %}


