{% extends 'backend_layout.html.twig' %}

{% block title %}Modification de la catégorie {{ categorie.libelle }}{% endblock %}

{% block body %}
    <div class="main-content">
        <div class="page-title">
            <h4 class="mb-0">
                Gestion des categories
                <small></small>
            </h4>
            <ol class="breadcrumb mb-0 pl-0 pt-1 pb-0">
                <li class="breadcrumb-item">
                    <a href="{{ path('backend') }}" class="default-color">Accueil</a>
                </li>
                <li class="breadcrumb-item active">Modification des categories</li>
            </ol>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    {% for message in app.flashes('notice') %}
                        <div class="flash-notice">
                            <div class="alert alert-success alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-label="close">
                                    <span aria-hidden="true">&times;</span></button>
                                <div class="text-center">
                                    <h6>{{ message }}</h6>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="row">

                <div class="col-md-7">
                    <div class="card card-shadow mb-4">
                        <div class="card-header">
                            <div class="card-title">
                                Liste des catégories
                            </div>
                        </div>
                        <div class="card-body">
                            <table
                                id="liste-categorie"
                                class="table table-striped"
                                cellspacing="0"
                                width="100%">
                                <thead>
                                    <tr>
                                        <th scope="col" class="text-center">#ID</th>
                                        <th scope="col" class="text-center">Libelle</th>
                                        <th scope="col" class="text-center">Statut</th>
                                        <th scope="col" class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for categorie in categories %}
                                        <tr>
                                            <th scope="col" class="text-right">{{ loop.index }}</th>
                                            <td>{{ categorie.libelle }}</td>
                                            <td class="text-center">
                                                {% if (categorie.statut) %}
                                                    <span class="badge badge-pill badge-success">Active</span>
                                                {% else %}
                                                    <span class="badge badge-pill badge-danger">Désactivée</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-center">
                                                <a href="{{ path('backend_categorie_edit', {'id': categorie.id, 'slug': categorie.slug }) }}">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                |
                                                <a
                                                    href="{{ path('backend_categorie_edit', {'id': categorie.id, 'slug': categorie.slug }) }}"
                                                    onclick="return(confirm('Etes-vous sûr de vouloir supprimer {{ categorie.libelle }} ?'));">
                                                    <i class="fa fa-trash-o"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="4" class="text-center">
                                                <h4>
                                                    <em>Aucun enregistrement trouvé</em>
                                                </h4>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="card card-shadow mb-4">
                        <div class="card-header">
                            <div class="card-title">
                                Modification de la catégorie {{ categorie.libelle }}
                            </div>
                        </div>
                        <div class="card-body">
                            {{ include('categorie/_form.html.twig', {'button_label': 'Modifier'}) }}

                            {{ include('categorie/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link
        href="{{ asset('backend/vendor/data-tables/dataTables.bootstrap4.min.css') }}"
        rel="stylesheet">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script
        src="{{ asset('backend/vendor/data-tables/jquery.dataTables.min.js') }}"></script>
    <script
        src="{{ asset('backend/vendor/data-tables/dataTables.bootstrap4.min.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('#liste-categorie').DataTable();
        });
    </script>
{% endblock %}