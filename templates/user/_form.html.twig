    <div class="form-group row">
        <label class="col-sm-4 control-label text-right" for="username">Utilisateur</label>
        <div class="col-sm-5">
            {{ form_widget(form.username) }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-4 control-label text-right" for="email">Email</label>
        <div class="col-sm-5">
            {{ form_widget(form.email) }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-4 control-label text-right" for="plainPassword">Mot de passe</label>
        <div class="col-sm-5">
            {{ form_widget(form.plainPassword.first) }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-4 control-label text-right" for="PlainPassword">Repeter le mot de passe</label>
        <div class="col-sm-5">
            {{ form_widget(form.plainPassword.second) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-5 col-sm-offset-4">.</div>
        <label class="custom-control custom-checkbox">
            {{ form_widget(form.isActive) }}
            <span class="custom-control-indicator"></span>
            <span class="custom-control-description">Activ√©</span>
        </label>
    </div>
    {{ form_rest(form) }}
    <div class="form-group row">
        <div class="col-sm-8 ml-auto">
            <button type="submit" class="btn btn-primary" name="signup" value="Sign up">Enregistrer</button>
        </div>
    </div>
{{ form_end(form) }}

